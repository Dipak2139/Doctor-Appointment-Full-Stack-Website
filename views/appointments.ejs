<%- include('layout/header2') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
             <div class="alert alert-dismissible fade show alert-<%= message.type%>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="
                close"></button>
                <strong><%= message.message%></strong>
             </div>
            <% } %>
            <div class="table-responsive">

                <% if (users != '') { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">Phone</th>
                                <th class="text-center">Specialist</th>
                                <th class="text-center">Doctor</th>
                                <th class="text-center">Date</th>
                            </tr>
                        </thead>
                    
                    <tbody>
                        <% users.forEach((row,index) => { %>
                            <tr class="allign-middle">
                                <td class="text-center"><%= index + 1 %></td>
                                <td><%= row.Name %></td>
                                <td class="text-center"><%= row.Number %></td>
                                <td><%= row.Specialist %></td>
                                <td><%= row.Doctor %></td>
                                <td class="text-center"><%= row.Appointment %></td>
                               
                                </td>
                                 
                            </tr>
                        <% }) %>

                    </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Users Found in the Database</h1>
                <% } %>
                     
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer2') %>