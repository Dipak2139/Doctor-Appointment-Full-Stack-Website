<%- include('layout/header2') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
             <div class="alert alert-dismissible fade show alert-<%= message.type%>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="
                close"></button>
                <strong><%= message.message%></strong>
             </div>
            <% } %>
            <div class="table-responsive">
                <% if (users1 != '') { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">Email</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                    
                    <tbody>
                        <% users1.forEach((row,index) => { %>
                            <tr class="allign-middle">
                                <td><%= index + 1 %></td>
                                <td><%= row.name %></td>
                                <td><%= row.email %></td>
                                <td>
                                    <a href="/edit2/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    
                                    <a href="/delete2/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    
                                </td>
                                
                            </tr>
                        <% }) %>

                    </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Users Found in the Database</h1>
                <% } %>
                     
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>